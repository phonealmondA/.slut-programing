{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Quantum Consciousness IDE",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "identifier": "com.quantum.consciousness.ide",
      "targets": "all"
    },
    "windows": [
      {
        "title": "Quantum Consciousness IDE - Visual .slut Editor",
        "width": 1920,
        "height": 1080,
        "minWidth": 1200,
        "minHeight": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "fileDropEnabled": true
      }
    ]
  }
}
